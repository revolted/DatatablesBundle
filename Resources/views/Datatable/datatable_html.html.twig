<div class="table-wrap">
    <table cellpadding="0" cellspacing="0" class="{{ view_options.class }}" border="0" id="{{ view_table_id }}" width="100%">
        <thead>
        </thead>
        {% if view_options.individualFiltering or view_multiselect %}
            <tfoot>
                {% if view_options.individualFiltering %}
                <tr>
                    {% for column in view_columns %}
                        <td>
                            {% if view_options.searchable and column.searchable %}
                                {{ datatable_filter_render(datatable, column, loop.index0) }}
                            {% elseif column.reset is defined and column.reset %}
                                <a href="javascript://" title="Filter verwijderen" onclick="$('#{{ view_table_id }}').reset();$('#{{ view_table_id }}').dataTable().fnFilterClear(); return false;">
                                    <i class="icon-remove"></i>
                                </a>
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
                {% endif %}
            </tfoot>
        {% endif %}
        <tbody>
        </tbody>
    </table>
</div>